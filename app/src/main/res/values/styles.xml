<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/BlueButton</item>
    </style>

    <!-- Estilo único para los botones -->
    <style name="BlueButton">
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!--Estilo para los cuadros de diálogo-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonTint">@color/colorPrimary</item> <!-- Color del texto de los botones -->
        <item name="android:textColor">@color/colorPrimary</item> <!-- Asegurar que el texto sea visible -->
        <item name="android:background">@color/white</item> <!-- Fondo blanco del diálogo -->
    </style>


</resources>